{
  "env": {
    "browser": true,
    "node": true,
    "es2017": true,
    "commonjs": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "no-underscore-dangle": "off",
    "prefer-promise-reject-errors": "off",
    "import/no-unresolved": "off",
    "no-unused-vars": "warn",
    "max-len": [
      1,
      {
        "code": 120,
        "tabWidth": 2,
        "comments": 150
      }
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      0
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-mixed-spaces-and-tabs": [
      "warn",
      "smart-tabs"
    ],
    "no-console": [
      "off",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  }
}